# DevOps MCP Development Environment Variables
# Copy this to .env.local for your personal overrides

# Environment
ENVIRONMENT=development

# API Configuration
API_HOST=localhost
API_PORT=8080
MCP_SERVER_URL=http://localhost:8080
REST_API_URL=http://localhost:8081
MCP_API_KEY=dev-admin-key-1234567890
JWT_SECRET=dev-jwt-secret-minimum-32-characters
ADMIN_API_KEY=dev-admin-key-1234567890
READER_API_KEY=dev-readonly-key-1234567890

# Database Configuration (Local PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=devops_mcp_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL_MODE=disable

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ADDR=localhost:6379

# ElastiCache configuration (using local Redis for development)
ELASTICACHE_ENDPOINT=localhost
ELASTICACHE_PORT=6379

# GitHub Integration (fill in your values)
GITHUB_TOKEN=your-github-token-here
GITHUB_WEBHOOK_SECRET=dev-webhook-secret
GITHUB_OWNER=your-github-username
GITHUB_REPO=test-repo
GITHUB_APP_ID=
GITHUB_INSTALLATION_ID=

# Mock Server
MOCKSERVER_URL=http://localhost:8082
USE_MOCK_GITHUB=true

# AWS/LocalStack Configuration (for S3, SQS)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566
S3_BUCKET=dev-contexts
S3_ENDPOINT=http://localhost:4566

# Monitoring
LOG_LEVEL=debug
PROMETHEUS_ENABLED=true
TRACING_ENABLED=false

# Feature Flags
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_VECTOR_SEARCH_ENABLED=true
FEATURE_GITHUB_INTEGRATION_ENABLED=true

# Security
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_ENABLED=false
REQUIRE_AUTH=false

# Development Tools
HOT_RELOAD=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_SWAGGER=true
ENABLE_PPROF=true

# ==============================================================================
# EMBEDDING CONFIGURATION
# ==============================================================================

# Enable embedding system
EMBEDDING_ENABLED=true

# OpenAI Provider (set to true and add API key to enable)
OPENAI_ENABLED=false
OPENAI_API_KEY=  # Add your OpenAI API key here

# AWS Bedrock Provider (uses existing AWS credentials above)
BEDROCK_ENABLED=false
# BEDROCK_ENDPOINT=  # Optional: Custom endpoint
# BEDROCK_ROLE_ARN=  # Optional: IAM role

# Google AI Provider
GOOGLE_AI_ENABLED=false
GOOGLE_AI_API_KEY=  # Add your Google AI API key here

# Embedding Cost Control
GLOBAL_COST_LIMIT=10.0  # Daily limit in USD for development
COST_ALERT_THRESHOLD=5.0  # Alert at $5 for development

# Legacy Vector Search (kept for compatibility)
VECTOR_ENABLED=true
VECTOR_DEFAULT_MODEL=text-embedding-ada-002
VECTOR_DEFAULT_DIMENSION=1536