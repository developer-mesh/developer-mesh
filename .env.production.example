# Production Environment Variables Template
# These should be set via your deployment platform (K8s secrets, AWS SSM, etc.)
# DO NOT commit actual values to version control

# Application
APP_VERSION=1.0.0
ENVIRONMENT=production
PORT=8080

# Authentication - REQUIRED
JWT_SECRET=                    # Generate with: openssl rand -base64 32
REQUIRE_MFA=false             # Set to true for enhanced security
IP_WHITELIST=                 # Comma-separated IP addresses/ranges

# Database - AWS RDS
RDS_HOST=                     # your-db.region.rds.amazonaws.com
RDS_PORT=5432
RDS_USERNAME=                 # From AWS Secrets Manager
RDS_PASSWORD=                 # From AWS Secrets Manager
RDS_DATABASE=devops_mcp
USE_IAM_AUTH=true
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=25
USE_READ_REPLICAS=true
READ_REPLICA_HOSTS=           # Comma-separated list

# Cache - AWS ElastiCache
ELASTICACHE_ENDPOINTS=        # cluster.cache.amazonaws.com:6379
ELASTICACHE_AUTH_TOKEN=       # From AWS Secrets Manager
REDIS_POOL_SIZE=100
REDIS_MIN_IDLE=20

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=

# S3 Storage
S3_BUCKET=                    # your-production-bucket
S3_KMS_KEY_ID=               # For encryption at rest

# GitHub Integration
GITHUB_TOKEN=                 # From secrets manager
GITHUB_WEBHOOK_SECRET=        # From secrets manager
GITHUB_API_URL=              # https://api.github.com or your GHE URL

# SonarQube Integration
SONARQUBE_URL=               # Your SonarQube instance
SONARQUBE_TOKEN=             # From secrets manager

# Monitoring
LOG_LEVEL=info
METRICS_AUTH_TOKEN=          # For metrics endpoint auth
TRACING_ENABLED=true
TRACING_PROVIDER=jaeger
TRACING_ENDPOINT=            # Your Jaeger collector
TRACING_SAMPLE_RATE=0.1

# Security
TLS_ENABLED=true
TLS_CERT_FILE=/etc/tls/tls.crt
TLS_KEY_FILE=/etc/tls/tls.key
REQUEST_SIGNING_ENABLED=true
SECRETS_PROVIDER=aws-secrets-manager
SECRETS_PREFIX=devops-mcp/

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_MAX=100
RATE_LIMIT_WINDOW=1m

# CORS
CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# High Availability
HA_ENABLED=true
WORKER_POOL_SIZE=20
MAX_CONCURRENT_OPS=50

# Compliance
DATA_RESIDENCY_ENABLED=true
ALLOWED_REGIONS=us-west-2,eu-west-1

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false

# Alerting
PAGERDUTY_TOKEN=
SLACK_WEBHOOK_URL=
ALERT_EMAIL=ops@example.com

# Network
VPC_ENDPOINT_IDS=            # Comma-separated VPC endpoint IDs

# Deployment
DEPLOYMENT_ID=               # Unique deployment identifier
CANARY_ENABLED=false
CANARY_PERCENTAGE=0