# DevOps MCP Environment Variables Template
# Copy this file to .env and fill in your values

# Application
APP_VERSION=1.0.0
ENVIRONMENT=development
PORT=8080

# Authentication
JWT_SECRET=your-jwt-secret-minimum-32-characters
REQUIRE_AUTH=false

# API Keys (Development only - use secrets manager in production)
ADMIN_API_KEY=dev-admin-key-1234567890
READER_API_KEY=dev-readonly-key-1234567890

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=devops_mcp_dev

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_API_URL=https://api.github.com
USE_MOCK_GITHUB=false

# SonarQube Integration
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your-sonarqube-token

# S3 Storage (LocalStack for development)
S3_ENDPOINT=http://localhost:4566
S3_BUCKET=dev-contexts
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# Monitoring
LOG_LEVEL=debug
METRICS_ENABLED=true
TRACING_ENABLED=false

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=true
USE_MOCK_SERVICES=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_MAX=1000
RATE_LIMIT_WINDOW=1m

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Development Tools
HOT_RELOAD=true
ENABLE_DEBUG_ENDPOINTS=true